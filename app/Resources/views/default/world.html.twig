{% extends 'base.html.twig' %}


{% block title %}
    RNN - World Wide
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            {% set rnd = random(min(5,(news|length)-1)) %}
            {% if news | length > 0 %}
                <a href="{{ path('post',{'id':news[rnd].id}) }}">
            {% else %}
                <a href="">
            {% endif %}
                <div class="regions_1 text-center">
                    <h2> ما يحدث الآن في العالم</h2>
                    {% if news|length > 0 %}
                        <p>{{ news[rnd].title }}</p>
                    {% endif %}
                </div>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 politics_main_5">
            <div class="col-sm-1"></div>

            {% if news|length > 0 %}
                <div class="col-sm-10">
                    <div id="transition-timer-carousel" class="carousel slide transition-timer-carousel" data-ride="carousel">

                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            {% set idx = 0 %}
                            {% for post in news if idx < 10 %}
                                {% if idx == 0 %}
                                    <li data-target="#transition-timer-carousel" data-slide-to="0" class="active"></li>
                                {% else %}
                                    <li data-target="#transition-timer-carousel" data-slide-to="{{ idx }}"></li>
                                {% endif %}
                                {% set idx = idx + 1 %}
                            {% endfor %}
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">

                            {% set idx = 0 %}
                            {% for post in news if idx < 10 %}
                                {% if idx == 0 %}
                                    <div class="item active">
                                        {% if post.mainImage != "" %}
                                            <img src="{{ asset('uploads/') }}{{ post.mainImage }}" width="100%">
                                        {% else %}
                                            <img src="https://i.pinimg.com/736x/98/ae/fd/98aefd81b638277eeb74258c17ac8d57--funny-shit-funny-cats.jpg" width="100%">
                                        {% endif %}
                                        <div class="carousel-caption">
                                            <a href="{{ path('post',{'id':post.id}) }}" >
                                                <h1 class="carousel-caption-header">{{ post.title }}</h1>
                                            </a>
                                            <p class="carousel-caption-text hidden-sm hidden-xs"></p>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="item">
                                        {% if post.mainImage != "" %}
                                            <img src="{{ asset('uploads/') }}{{ post.mainImage }}" width="100%">
                                        {% else %}
                                            <img src="https://i.pinimg.com/736x/98/ae/fd/98aefd81b638277eeb74258c17ac8d57--funny-shit-funny-cats.jpg" width="100%">
                                        {% endif %}
                                        <div class="carousel-caption">
                                            <a href="{{ path('post',{'id':post.id}) }}" >
                                                <h1 class="carousel-caption-header">{{ post.title }}</h1>
                                            </a>
                                            <p class="carousel-caption-text hidden-sm hidden-xs"></p>
                                        </div>
                                    </div>
                                {% endif %}
                                {% set idx = idx + 1 %}
                            {% endfor %}


                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="http://bootsnipp-env.elasticbeanstalk.com/iframe/yjX1#transition-timer-carousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="http://bootsnipp-env.elasticbeanstalk.com/iframe/yjX1#transition-timer-carousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-sm-10">
                    <h1 class="alert alert-danger">لا يوجد أخبار عاجلة عالمية حاليا!!</h1>
                </div>
            {% endif %}
        </div>
    </div>

